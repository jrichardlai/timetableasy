<div class="box">	
	<div class="box-header">

		<h4><%= t 'general.school_subjects' %></h4>	
	</div> <!-- .portlet-header -->	

	<div class="box-content">				
		<div style="width:100%; height:auto;" id="school_subjects_list">
			<% if @cursus.school_subjects.count > 0 %>
			<table style="margin:auto;">
				<thead>
					<tr>
						<th width="5%"><%= t 'general.number' %></th>
						<th width="10%"><%= t 'general.name' %></th>
						<th width="35%"><%= t 'general.description' %></th>
						<th width="15%"><%= t 'general.actions' %></th>
					</tr>
				</thead>
				<tbody>
					<% @cursus.school_subjects.each do |ssubjects| %>
					<tr>
						<th><%= ssubjects.id %></th>
						<td><%= ssubjects.name %></td>
						<td><%= ssubjects.description %></td>
						<td><%= link_to_remote image_tag('editer_little.png', :class => "veralign edit"), :url =>  edit_cursus_school_subject_path(@cursus, ssubjects), :method => "get", :update => { :success => "form_add_school_subjects", :failure => "error" } %>

						<%= link_to_remote image_tag('delete_little.png', :class => "veralign"), :url => cursus_school_subject_path(@cursus, ssubjects), :method => "delete", :update => { :success => "school_subjects_list", :failure => "error" } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<% else %>
			<h6><%= t 'school_subjects.no_school_subjects_available' %></h6>
			<% end %>
			<br />
		</div>
		<br />
		<div style="width:100%; height:auto;" id="form_add_school_subjects">

		</div>
		<div class="abutton" id="create_school_subject_div"><%= link_to_remote image_tag('styles/add_periods.png', :class => "veralign") + " " + t('school_subjects.new'), :url =>  new_cursus_school_subject_path(@cursus), :method => "get", :html => {:id => "create_school_subject", :class => "button"}, :update => { :success => "form_add_school_subjects", :failure => "error" } %></div>
	</div>
</div> <!-- .portlet-content -->	
