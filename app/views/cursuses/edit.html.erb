<h1>Editing cursus</h1>

<% form_for(@cursus, :url => cursus_path(@cursus))  do |f| %>
  	<%= f.error_messages %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br />
	<%= f.label :description %>
	<br />
	<%= f.text_area :description %>
	<br />
	<%= f.label :campuses %>
	<br />
	<% for campus in Campus.all %>
	  <%= check_box_tag "cursus[campus_ids][]", campus.id, @cursus.campuses.include?(campus), :id => "campus_#{campus.id}" %>
	  <%= campus.name %><br />
	<% end %>
	<%= hidden_field_tag "cursus[campus_ids][]", "" %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', cursus_path(@cursus) %> |
<%= link_to 'Back', cursuses_path %>