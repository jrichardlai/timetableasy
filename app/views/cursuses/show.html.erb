<div class="left">

	<div class="box">	
		<div class="box-header">

			<h4><%= t "general.visualisation" %> <%= t "periods.cursuses" %> : <%= @cursus.name %></h4>	
		</div> <!-- .portlet-header -->	

		<div class="box-content">				
			<div style="width:100%; height:auto;">
				<table style="margin:auto;">
					<thead>

					</thead>
					<tbody>
						<tr>
							<th><strong><%= t "general.name" %></strong></th>
							<td><%= @cursus.name %></td>
						</tr>
						<tr class="odd">
							<th><strong><%= t "general.description" %></strong></th>
							<td><%= @cursus.description %></td>
						</tr>
						<% if @cursus.campuses.count > 0 %>
						<tr>
							<th><strong><%= t "general.campuses" %></strong></th>
							<td>
								<% @cursus.campuses.each do |campus| %>
								<%= campus.name %><br />
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
					</table>
					<br />
					<div class="abutton">
						<span><%= link_to image_tag('edit.png', :class => "veralign") + " " + t('general.edit'), edit_cursus_path(@cursus), :class => "button" %> </span>
						<span><%= link_to image_tag('delete.png', :class => "veralign") + " " + t('general.delete'), cursus_path(@cursus), :confirm => 'Are you sure?', :method => :delete, :class => "button" %></span>
					</div>
				</div>
			</div> <!-- .portlet-content -->	
		</div> <!-- .portlet -->
	</div>

	<div class="right">

		<div class="box">	
			<div class="box-header">

				<h4><%= t 'general.periods' %></h4>	
			</div> <!-- .portlet-header -->	

			<div class="box-content">				
				<div style="width:100%; height:auto;" id="periods_list">
					<% if @cursus.periods.count > 0 %>
					<table style="margin:auto;">
						<thead>
							<tr>
								<th width="5%"><%= t 'general.number' %></th>
								<th width="10%"><%= t 'general.type' %></th>
								<th width="35%"><%= t 'general.from' %></th>
								<th width="35%"><%= t 'general.to' %></th>
								<th width="15%"><%= t 'general.actions' %></th>
							</tr>
						</thead>
						<tbody>
							<% @cursus.periods.each do |period| %>
							<tr>
								<th><%= period.id %></th>
								<td><%= period.name %></td>
								<td><%= format_date(period.begin_at) %></td>
								<td><%= format_date(period.end_at) %></td>
								<td>edit / delete</td>
							</tr>
							<% end %>
						</tbody>
					</table>
					<% else %>
					<h6><%= t 'periods.no_periods_available' %></h6>
					<% end %>
					<br />
				</div>
				<br />
				<div style="width:100%; height:auto;" id="form_add_periods">

				</div>
				<div class="abutton"><%= link_to_remote image_tag('styles/add_periods.png', :class => "veralign") + " " + t('periods.new_period'), :url =>  new_cursus_period_path(@cursus), :method => "get", :html => {:id => "create_period", :class => "button"}, :update => { :success => "form_add_periods", :failure => "error" } %></div>
			</div>
		</div> <!-- .portlet-content -->	
	</div> <!-- .portlet -->
</div>

	<div style="clear:both;">
	</div>
