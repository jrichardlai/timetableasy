$(document).ready(function() {
	$('#create_period').click(function() {
		$('#create_period_div').css('display', 'none');
	});
	
	$('.edit').each(function() {
		$(this).click(function() {
			$('#create_period_div').css('display', 'none');
		});
	});
});

$("#cancel_period_creation").click(function() {
	$('#form_add_periods').empty();
	$('#create_period_div').css('display', 'block');
});
