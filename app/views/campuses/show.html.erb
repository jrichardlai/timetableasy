
<table>
  <tr>
  </tr>

  	<tr>
		<td><%= t "general.name" %></td>
		<td><%= @campus.name %></td>
  	</tr>
 	<tr>
		<td><%= t "general.address" %></td>
		<td><%= @campus.address %></td>
  	</tr>
 	<tr>
		<td><%= t "general.zip" %></td>
		<td><%= @campus.zip %></td>
  	</tr>
 	<tr>
		<td><%= t "general.city" %></td>
		<td><%= @campus.city %></td>
  	</tr>
 	<tr>
		<td><%= t "general.country" %></td>
		<td><%= @campus.country %></td>
  	</tr>
 	<tr>
		<td><%= t "general.timezone" %></td>
		<td><%= @campus.timezone %></td>
  	</tr>
	<% if @campus.cursuses.count > 0 %>
	<tr>
		<td><%= t "general.cursuses" %></td>
		<td>
			<% @campus.cursuses.each do |cursus| %>
			<%= cursus.name %>
			<% end %>
		</td>
  	</tr>
	<% end %>
</table>

<br />
<% if @campus.rooms.count > 0 %>
<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%=h room.name %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% end %>

<%= link_to 'Edit', edit_campus_path(@campus) %> |
<%= link_to 'Back', campuses_path %> |
<%= link_to 'New room', new_campus_room_path(@campus) %>