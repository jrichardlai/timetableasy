<h1>New campus</h1>

<% form_for(@campus, :url => campuses_path) do |f| %>
  <%= f.error_messages %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br />
	<%= f.label :address%>
	<%= f.text_field :address %>
	<br />
	<%= f.label :zip%>
	<%= f.text_field :zip %>
	<br />
	<%= f.label :city%>
	<%= f.text_field :city %>
	<br />
	<%= f.label :country%>
	<%= f.text_field :country %>
	<br />
	<%= f.label :timezone%>
	<%= f.time_zone_select :timezone, ActiveSupport::TimeZone.all %>
	<br />
	
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', campuses_path %>