<div class="box2">	
	<div class="box-header">
		<h4><%= t 'teaching_methods.title' %></h4>
	</div>
	<div class="box-content">
		<div style="width:100%; height:auto;" id="teaching_methods_list">
			<% if @school_subject.teaching_methods.count > 0 %>
			<table style="margin:auto;">
				<thead>
					<tr>
						<th width="10%"><%= t 'general.type' %></th>
						<th width="35%"><%= t 'general.duration' %></th>
						<th width="15%"><%= t 'general.actions' %></th>
					</tr>
				</thead>
				<tbody>
					<% @teaching_methods.each do |teaching_method| %>
					<tr>
						<td><%= t "teaching_methods.teaching_type.#{teaching_method.teaching_type}" %></td>
						<td><%= teaching_method.duration %></td>
						<td><%= link_to_remote image_tag('editer_little.png', :class => "veralign"), :url =>  edit_school_subject_teaching_method_path(@school_subject, teaching_method), :method => "get", :update => { :success => "form_add_teaching_methods", :failure => "error" } %>

						<%= link_to_remote image_tag('delete_little.png', :class => "veralign"), :url => school_subject_teaching_method_path(@school_subject, teaching_method), :method => "delete", :update => { :success => "teaching_methods_list", :failure => "error" } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<% else %>
			<h6><%= t 'teaching_methods.no_teaching_methods_available' %></h6>
			<% end %>
		</div>
		<div class="message message-error message-closable" style="display:none;" id="errors_ss"><%= t "errors.error_header" %></div>
		<div class="portlet-form" style="width:100%; height:auto;" id="form_add_teaching_methods"></div>
		<div class="abutton bouton-box" id="create_teaching_method_div"><%= link_to_remote image_tag('styles/add_periods.png', :class => "veralign") + " " + t('teaching_methods.new'), :url =>  new_school_subject_teaching_method_path(@school_subject), :method => "get", :html => {:id => "create_teaching_method", :class => "button"}, :update => { :success => "form_add_teaching_methods", :failure => "error" } %></div>
	</div>
</div> <!-- .portlet-content -->