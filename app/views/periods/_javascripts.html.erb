$('.date_picker').datepicker({dateFormat:'dd-mm-yy'});

$("#new_period_creation").click( function() {
 	$('#form_add_periods').empty();
	$('#create_period_div').css('display', 'block');
});

$("#edit_period_update").click( function() {
 	$('#form_add_periods').empty();
	$('#create_period_div').css('display', 'block');
});

$("#cancel_period_creation").click(function() {
	$('#form_add_periods').empty();
	$('#create_period_div').css('display', 'block');
	return false;
});