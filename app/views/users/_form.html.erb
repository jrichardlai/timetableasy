<h2><%= image_tag("user_new.png", :class => 'veralign') %> <%= t 'menu.users.create_user' %></h2>
<div class="fieldset">
	<div class="formRow">
		<div class="label">
			<%= label_tag t('general.nickname') %>
		</div>
		<div class="field">
			<%= form.text_field :login %>
		</div>
	</div>

	<div class="formRow">
		<div class="label">
			<%= label_tag t('general.lastname') %>
		</div>
		<div class="field">
			<%= form.text_field :lastname %>
		</div>
	</div>

	<div class="formRow">
		<div class="label">
			<%= label_tag t('general.firstname') %>
		</div>
		<div class="field">
			<%= form.text_field :firstname %>
		</div>
	</div>

	<div class="formRow">
		<div class="label">
			<%= label_tag t('general.mail') %>
		</div>
		<div class="field">
			<%= form.text_field :email %>
		</div>
	</div>

	<div class="formRow">
		<div class="label">
			<%= label_tag t('general.password') %>
		</div>
		<div class="field">
			<%= form.password_field :password %>
		</div>
	</div>

	<div class="formRow">
		<div class="label">
			<%= label_tag t('general.password_confirm') %>
		</div>
		<div class="field">
			<%= form.password_field :password_confirmation %>
		</div>
	</div>
</div>

<% if can? :assign_roles, current_user %>

<h2><%= image_tag("roles.png", :class => 'veralign') %> <%= t 'user.roles' %></h2>
<div class="fieldset">
	<div class="formRow">
		<div class="label">
			<%= form.label :roles %><br />
		</div>
		<div class="field">
			<% for role in RoleType.all %>
			<%= check_box_tag "user[role_type_ids][]", role.id, @user.roles.include?(role), :id => "role_#{role.id}" %>
			<%= role.name %><br />
			<% end %>
		</div>
		<%= hidden_field_tag "user[role_type_ids][]", "" %>
	</div>
</div>
<% end %>
<br /><br />
<div class="fieldset">
	<div class="formRow">
		<div class="label">
			&nbsp;
		</div>
		<div class="field">
			<%= form.submit t('user.create'), :class => "submit" %>
		</div>
	</div>
</div>