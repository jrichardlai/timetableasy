<% if @cursus.school_subjects.count > 0 %>
<table style="margin:auto;">
	<thead>
		<tr>
			<th width="5%"><%= t 'general.number' %></th>
			<th width="10%"><%= t 'general.name' %></th>
			<th width="35%"><%= t 'general.description' %></th>
			<th width="15%"><%= t 'general.actions' %></th>
		</tr>
	</thead>
	<tbody>
		<% @school_subjects.each do |school_subject| %>
		<tr>
			<th><%= school_subject.id %></th>
			<td><%= school_subject.name %></td>
			<td><%= school_subject.description %></td>
			<td><%= link_to_remote image_tag('editer_little.png', :class => "veralign"), :url =>  edit_cursus_school_subject_path(@cursus, school_subject), :method => "get", :update => { :success => "form_add_school_subjects", :failure => "error" } %>

			<%= link_to_remote image_tag('delete_little.png', :class => "veralign"), :url => cursus_school_subject_path(@cursus, school_subject), :method => "delete", :update => { :success => "school_subjects_list", :failure => "error" } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<% else %>
<h6><%= t 'school_subjects.no_school_subjects_available' %></h6>
<% end %>