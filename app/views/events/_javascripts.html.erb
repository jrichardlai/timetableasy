$(document).ready(function(){
	$('.date_picker').datepicker({dateFormat:'dd/mm/yy'});
	$('.time_picker').timePicker({
	  startTime: "00:00", // Using string. Can take string or Date object.
	  endTime: new Date(0, 0, 0, 15, 30, 0), // Using Date object here.
	  step: 60});
	$('#event_event_scope_type').change(function(){
		var select_value = $(this).val();
		if (select_value) {
			jQuery.get(
				"javascripts/event_types.js",
				{type: select_value}
			)
		}
		else {
			$('#event_scope_id_select').html('');
		}
	});
	if ($("#only_mandatory").val() == "true") {
		$("#event_force_display").attr('checked', true);
	}
});