function toggle_type(elem) {
	var obj_type = $(elem).attr('id').replace('toggle_', '')
	if ($(elem).attr('checked')) {
		$('.not_'+ obj_type).hide();
		$('.not_'+ obj_type+ ' input').val('');
		$('.not_'+ obj_type+ ' select').val('');
		$('.'+ obj_type).show();
	}
	else {
		$('.not_'+ obj_type).show();
		$('.'+ obj_type).hide();
	}
}

