<p>
  <%= form.label :name %>
  <br/>
  <%= form.text_field :name %>
</p>
<p>
  <%= form.label :description %>
  <br/>
  <%= form.text_area :description, :rows => 4, :cols => 30 %>
</p>

<%- if can? current_user, :manage, Cursus  %>
	<%= form.label :force_display %>
	<%= form.check_box :force_display, :default => false %>
<%- end -%>
<%- if current_user.admin? -%>
<p>
	<%= form.label :global_event %>
	<%= form.check_box :global_event, :default => false, :id => 'toggle_global' %>
</p>
<%- end -%>

<div class="not_global">
	<%- if can? current_user, :manage, Classroom  %>
		<%= t('general.event_for_academical') %>
		<input type="checkbox" id="toggle_academical"/>
		<div class="academical">
			<p>
			<%= form.label :subject %>
				<select>
				<option>Microsoft</option>
				<option>Cisco</option>
				</select>
			</p>
			<p><%= form.label :type %>
			<select>
				<option>Cours</option>
				<option>TP</option>
			</select>
			</p>
			<p>
			<%= form.label :subject_method %>
			<select>
				<option>Elearning</option>
				<option>Cours en salle</option>
			</select>
			</p>
		</div>
	<%- end -%>
	<p class="not_academical">
		<%= form.label :event_type %>
		<%= form.collection_select :event_type_id, EventType.all, :id, :name, {:include_blank => true} %>
	</p>
	<%- if can? current_user, :manage, Classroom  %>
		<p>
			<%= form.label :event_for %>
			<%= form.select :event_scope_type, ['Campus', 'Cursus', 'Classroom'], {:include_blank => true} %>
			<span id="event_scope_id_select">
			<% if not @event.event_scope_type.blank? and @event.event_scope_type != 'User' %>
				<%= form.collection_select :event_scope_id, Kernel.const_get(@event.event_scope_type).all, :id, :name, {:include_blank => true} %>
			<% end %>
			</span>
		</p>
		<p>
			<%= form.label :speaker %>
			<input type="checkbox" id="toggle_spearker-exists" <%= 'checked="checked"' if @event.speaker_name.blank? %> />
			<%= form.collection_select :speaker_id, User.intervenants, :id, :login, {:include_blank => true}, :class => 'spearker-exists' %>
			<%= form.text_field :speaker_name, :class => 'not_spearker-exists' %>
		</p>
	<%- end -%>

	<%- if can? current_user, :manage, Campus -%>
		<p>
			<%= form.label :room %>
			<input type="checkbox" id="toggle_room-exists" <%= 'checked="checked"' if @event.room_name.blank? %> />
			<%= form.collection_select :room_id, Room.all, :id, :name, {:include_blank => true}, :class => 'room-exists' %>
			<%= form.text_field :room_name, :class => 'not_room-exists' %>
		</p>
	<%- end -%>
</div>
<p>
  <%= form.text_field :start_day, :class => 'date_picker' %>
  <%= form.text_field :start_time, :class => 'time_picker' %>
	<%= t('general.to') %>
  <%= form.text_field :end_time, :class => 'time_picker' %>
  <%= form.text_field :end_day, :class => 'date_picker' %>
</p>